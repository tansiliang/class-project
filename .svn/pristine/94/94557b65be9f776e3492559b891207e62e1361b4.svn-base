*{
    margin:0;
    padding:0;
}
#bodys{
    width:1349px;
    height:700px;
    background:url(../images/login/IMG_0541.jpg) no-repeat left top;
}
/* 登录页面填写的信息 */
#content{
    width:400px;
    height:500px;
    background:#fff;
    border-radius: 10px;
    position:absolute;
    top:50%;
    left:50%;
    margin-left:-200px;
    margin-top:-220px;
    opacity: 0.5;
}

/* top */
#log_top{
    width:100%;
    height:auto;
}
#login_top_info{
    height:40px;
    line-height:40px;
    /* display: -webkit-box; */
    /* display: flex; */
    font-weight: lighter;
    border-radius:10px 10px 0 0;
    background:#3EA751;
}
#login_top_info span{
    text-align:center;
    display:block;
    font-size:25px;
    color:white;
}


#login_top_info span:last-child a{
    color:white;
}
/* logo */
#login_center{
    width:100%;
    height:auto;
    background:#fff;
    margin-bottom:0;
}
#login_center_img{
    width:200px;
    margin:auto;
}
#login_center_img img{
    border-radius: 100px;
    /* border:1px solid red; */
}
/* 用户名 密码 验证码 */
#login_uername ,#login_pass ,#login_code ,#login_auto ,#login_foot{
    width:100%;
    height:auto;
    
}
#username_div ,#userpass_div ,#code_div{
    height:45px;
    padding:0 15px;
    margin-top:10px;
    position: relative;
}
#username_div #username ,#userpass_div #userpass ,#code_div #validate{
    width:360px;
    border:0;
    border-bottom: 1px solid #ddd;
    padding:1em 2em 1em 3em;
    outline: none;
    /* font-size:16px; */
}
.iconphone{
    position:absolute;
    top:10px;
    left:25px;
}
/* 验证码 */
#code_img{
    position:absolute;
    top:0;
    right:25px;
    border-radius: 5px;
}

/* 自动登录 忘记密码 前端首页 */
#auto_div {
    height:40px;
    line-height:40px;
    display: -webkit-box;
    display: flex;
    font-weight: lighter;
    position:relative;
}
#auto_div div{
    -webkit-box-flex:1;
    -webkit-flex:1;
    flex:1;
    display:block;
    text-align:center;
    font-size:14px;
}
#automatic{
    visibility: hidden;
}
#auto_div div #check_css{
    display: inline-block;
    /* line-height:40px; */
    position:absolute;
    top:11px;
    left:20px;
    width:15px;
    height:15px;
    border:1px solid rgb(175, 174, 174);
    border-radius: 5px;
}
.glyphicon-ok{
    /* color:#fff;
    background:blue; */
}
#auto_div div:last-child a{
    font-size:15px;
} 

/* 登录 */
#foot_submit{
    height:60px;
    line-height:60px;
}
#login_refer{
    width:100%;
    /* background:#3EA751; */
    background:#3EA751;
    border:0;
    border-radius: 0 0 10px 10px;
    /* outline: none; */
    font-size:20px;
    font-weight: bold;
    color:#fff;
}